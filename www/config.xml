<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
		    xmlns:android="http://schemas.android.com/apk/res/android"
        id = "com.ingalb.albania-2016"
        versionCode = "5"
        version = "1.2">
    <name>Albania in France 2016</name>

    <description>
       Aplikacioni realizuar per ekipin e Shqiperise ne Europianin France 2016. Ndeshjet live, Historia, lajme, informacione dhe statistika nga ekipi kuq e zi Shqiperia.
    </description>

    <author href="http://www.ingalb.info" email="contact@ingalb.info">
        Ingalb Company
    </author>

<!--	<gap:config-file platform="android" parent="/manifest">
		<application android:debuggable="true" />
	</gap:config-file>-->

	<content src="index.html"/>
	
	<preference name="phonegap-version" value="cli-5.2.0" />
	<preference name="android-build-tool" value="gradle" />

	<gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <gap:plugin name="cordova-plugin-inappbrowser" source="npm" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.statusbar" />
	<gap:plugin name="org.apache.cordova.splashscreen" />

	<gap:plugin name="cordova-plugin-whitelist" source="npm" />


	<!--<gap:plugin name="admob" version="5.4.2" source="npm"/>-->
    <gap:plugin name="cordova-plugin-admobpro" source="npm" />
	<gap:plugin name="onesignal-cordova-plugin-pgb-compat" source="npm" />
	<!--<gap:plugin name="cordova-plugin-googleplayservices" source="npm" />-->
    <gap:plugin name="nl.x-services.plugins.socialsharing" />
    <gap:plugin name="cordova-plugin-android-support-v4" source="npm" />



    <preference name="permissions"  value="none"/>
	<uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <preference name="phonegap-version"/>
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="android-minSdkVersion"      value="10" />              <!-- android: MIN SDK version supported on the target device. MAX version is blank by default. -->
    <preference name="android-installLocation"    value="auto" />           <!-- android: app install location. 'auto' will choose. 'internalOnly' is device memory. 'preferExternal' is SDCard. -->

    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
	<preference name="AutoHideSplashScreen" value="true" />
    <!--	<preference name="splash-screen-duration" value="500000" />-->
	  <preference name="SplashScreenDelay" value="1000"/>


    <icon src="icon.png" />
    <splash src="splash.png" />


    <icon src="res/icon/android/icon-36-ldpi.png" platform="android" qualifier="ldpi" />
    <icon src="res/icon/android/icon-48-mdpi.png" platform="android" qualifier="mdpi" />
    <icon src="res/icon/android/icon-72-hdpi.png" platform="android" qualifier="hdpi" />
    <icon src="res/icon/android/icon-96-xhdpi.png" platform="android" qualifier="xhdpi" />
    <icon src="res/icon/android/icon-144-xxhdpi.png" platform="android" qualifier="xxhdpi" />

    <splash src="res/screen/android/ldpi.png" platform="android" qualifier="ldpi" />
    <splash src="res/screen/android/mdpi.png" platform="android" qualifier="mdpi" />
    <splash src="res/screen/android/hdpi.png" platform="android" qualifier="hdpi" />
    <splash src="res/screen/android/xhdpi.png" platform="android" qualifier="xhdpi" />
    <splash src="res/screen/android/portrait-xxhdpi.png" platform="android" qualifier="port-xxhdpi" />
    <splash src="res/screen/android/xxhdpi.png" platform="android" qualifier="land-xxhdpi" />

    <!-- iPhone 6 / 6+ -->
